   		    android:name="SeattleTrafficAlerts"
   		    android:configChanges="orientation|keyboardHidden" />
   		
   		<activity
   		    android:name="SeattleTrafficTravelTimes"
   		    android:configChanges="orientation|keyboardHidden" />
   		
   		<activity
   		    android:name="SeattleExpressLanes"
   		    android:theme="@android:style/Theme.Dialog"
   		    android:configChanges="orientation|keyboardHidden" />
   		
