   		<activity
   		    android:name="Twitter"
   		    android:configChanges="orientation|keyboardHidden" />
   		
   		<activity
   		    android:name="TwitterItemDetails" />
   		
   		<activity
   		    android:name="Photos"
   		    android:configChanges="orientation|keyboardHidden" />
   		
